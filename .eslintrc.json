{
  "env": {
    "browser": true
  },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:import/typescript",
    "plugin:css/recommended"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "import", "promise", "decorator-position", "@typescript-eslint", "css"],
  "rules": {
    "array-bracket-spacing": [
      1,
      "always",
      {
        "singleValue": true,
        "objectsInArrays": false,
        "arraysInArrays": false
      }
    ],
    "object-curly-spacing": [1, "always"],
    "no-multi-spaces": [
      1,
      {
        "ignoreEOLComments": true
      }
    ],
    "no-multiple-empty-lines": [
      1,
      {
        "max": 2,
        "maxBOF": 0,
        "maxEOF": 1
      }
    ],
    "no-var": 2,
    "object-shorthand": [1, "properties"],
    "array-callback-return": 1,
    "arrow-spacing": [
      1,
      {
        "before": true,
        "after": true
      }
    ],
    "block-spacing": [1, "always"],
    "brace-style": [
      1,
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "camelcase": [
      1,
      {
        "allow": ["^UNSAFE_"],
        "properties": "always",
        "ignoreGlobals": true
      }
    ],
    "comma-dangle": [1, "never"],
    "comma-spacing": [
      1,
      {
        "before": false,
        "after": true
      }
    ],
    "comma-style": [1, "last"],
    "computed-property-spacing": [
      1,
      "always",
      {
        "enforceForClassMembers": false
      }
    ],
    "constructor-super": 2,
    "curly": [1, "all"],
    "default-case-last": 1,
    "dot-location": [1, "property"],
    "dot-notation": 2,
    "eol-last": [1, "never"],
    "eqeqeq": [
      1,
      "always",
      {
        "null": "ignore"
      }
    ],
    "func-call-spacing": [1, "never"],
    "generator-star-spacing": [
      1,
      {
        "before": true,
        "after": false
      }
    ],
    "indent": [
      1,
      4,
      {
        "SwitchCase": 1,
        "VariableDeclarator": 1,
        "outerIIFEBody": 1,
        "MemberExpression": 1,
        "FunctionDeclaration": {
          "parameters": 1,
          "body": 1
        },
        "FunctionExpression": {
          "parameters": 1,
          "body": 1
        },
        "CallExpression": {
          "arguments": 1
        },
        "ArrayExpression": 1,
        "ObjectExpression": 1,
        "ImportDeclaration": 1,
        "flatTernaryExpressions": false,
        "ignoreComments": true,
        "ignoredNodes": [
          "FunctionExpression > .params[decorators.length > 0]",
          "FunctionExpression > .params > :matches(Decorator, :not(:first-child))",
          "ClassBody.body > PropertyDefinition[decorators.length > 0] > .key"
        ],
        "offsetTernaryExpressions": true
      }
    ],
    "key-spacing": [
      1,
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "keyword-spacing": [
      1,
      {
        "before": true,
        "after": true
      }
    ],
    "linebreak-style": [1, "windows"],
    "lines-between-class-members": [
      1,
      "always",
      {
        "exceptAfterSingleLine": true
      }
    ],
    "max-len": [
      1,
      {
        "code": 120,
        "ignoreComments": true
      }
    ],
    "multiline-ternary": [1, "always-multiline"],
    "new-cap": [
      1,
      {
        "newIsCap": true,
        "capIsNew": false,
        "properties": false
      }
    ],
    "new-parens": 1,
    "no-alert": 2,
    "no-array-constructor": 1,
    "no-async-promise-executor": 1,
    "no-caller": 1,
    "no-case-declarations": 2,
    "no-class-assign": 1,
    "no-compare-neg-zero": 1,
    "no-cond-assign": 2,
    "no-const-assign": 1,
    "no-constant-condition": [
      1,
      {
        "checkLoops": true
      }
    ],
    "no-console": 2,
    "no-dupe-args": 2,
    "no-dupe-class-members": 1,
    "no-dupe-keys": 1,
    "no-duplicate-case": 1,
    "no-useless-backreference": 1,
    "no-empty": [
      1,
      {
        "allowEmptyCatch": true
      }
    ],
    "no-eval": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": [
      1,
      {
        "enforceForLogicalOperands": false
      }
    ],
    "no-extra-parens": [0, "all"],
    "no-implied-eval": 2,
    "no-import-assign": 1,
    "no-invalid-regexp": 1,
    "no-irregular-whitespace": 1,
    "no-lone-blocks": 1,
    "no-misleading-character-class": 1,
    "no-useless-catch": 1,
    "no-mixed-spaces-and-tabs": 1,
    "no-multi-str": 1,
    "no-new": 2,
    "no-new-symbol": 0,
    "no-new-wrappers": 1,
    "no-redeclare": 1,
    "no-self-compare": 1,
    "no-sequences": 1,
    "no-shadow-restricted-names": 1,
    "no-template-curly-in-string": 1,
    "no-this-before-super": 1,
    "no-trailing-spaces": 1,
    "no-undef": 1,
    "no-undef-init": 1,
    "no-unreachable": 1,
    "no-unsafe-negation": 0,
    "no-useless-call": 1,
    "no-useless-computed-key": 1,
    "no-useless-constructor": 1,
    "no-useless-escape": 1,
    "no-useless-rename": 1,
    "no-whitespace-before-property": 1,
    "object-curly-newline": [
      1,
      {
        "multiline": true,
        "consistent": true
      }
    ],
    "object-property-newline": [
      1,
      {
        "allowMultiplePropertiesPerLine": true
      }
    ],
    "one-var": [1, "never"],
    "operator-linebreak": [
      1,
      "after",
      {
        "overrides": {
          "?": "before",
          ":": "before"
        }
      }
    ],
    "padded-blocks": [
      1,
      {
        "blocks": "never",
        "switches": "never",
        "classes": "never"
      }
    ],
    "prefer-const": [
      1,
      {
        "destructuring": "all"
      }
    ],
    "prefer-promise-reject-errors": 1,
    "prefer-regex-literals": [
      1,
      {
        "disallowRedundantWrapping": true
      }
    ],
    "quote-props": [1, "as-needed"],
    "quotes": [
      1,
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "rest-spread-spacing": [1, "never"],
    "semi": [1, "always"],
    "semi-spacing": [
      1,
      {
        "before": false,
        "after": true
      }
    ],
    "space-before-blocks": [1, "always"],
    "space-before-function-paren": [1, "never"],
    "space-in-parens": [1, "always"],
    "space-infix-ops": 1,
    "space-unary-ops": [
      1,
      {
        "words": true,
        "nonwords": false
      }
    ],
    "spaced-comment": [
      1,
      "always",
      {
        "line": {
          "markers": ["/"]
        },
        "block": {
          "balanced": true,
          "markers": ["/"],
          "exceptions": ["*"]
        }
      }
    ],
    "symbol-description": 1,
    "template-curly-spacing": [1, "always"],
    "template-tag-spacing": [1, "never"],
    "wrap-iife": [
      2,
      "any",
      {
        "functionPrototypeMethods": false
      }
    ],
    "yield-star-spacing": [1, "both"],
    "yoda": [1, "never"],

    "import/export": 2,
    "import/first": 2,
    "import/no-absolute-path": [
      2,
      {
        "esmodule": true,
        "commonjs": true,
        "amd": false
      }
    ],
    "import/no-duplicates": 2,
    "import/order": [
      1,
      {
        "groups": ["builtin", "external", "internal", "parent", "sibling", "index", "object", "type"],
        "newlines-between": "always"
      }
    ],
    "import/newline-after-import": [
      1,
      {
        "count": 2
      }
    ],
    "promise/param-names": 1,
    "decorator-position/decorator-position": [
      1,
      {
        "properties": "above",
        "methods": "above"
      }
    ],
    "@typescript-eslint/member-ordering": [
      1,
      {
        "default": ["constructor", "field", "method", "private-field", "private-method"]
      }
    ],
    "@typescript-eslint/no-unused-vars": [
      1,
      {
        "caughtErrors": "none"
      }
    ],
    "@typescript-eslint/no-extra-semi": 0,
    "@typescript-eslint/no-inferrable-types": 0,
    "@typescript-eslint/ban-ts-comment": 0
  }
}
