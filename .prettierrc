# Prettier configuration

printWidth: 140
singleQuote: true
tabWidth: 4
useTabs: true
quoteProps: "as-needed"
noBracketSpacing: true
embeddedLanguageFormatting: "auto"
singleAttributePerLine: true


# js and ts rules:
arrowParens: avoid

# jsx and tsx rules:
jsxBracketSameLine: false
jsx-single-quote: true